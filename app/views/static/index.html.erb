
  <h1>Inventory Cost Calculator</h1>

  <form id="inventoryForm">
    <label for="numUnits">Number of Units Sold:</label>
    <input type="number" id="numUnits" required><br><br>

    <h2>Inventory Batches</h2>
    <div id="inventoryBatches">
      <div class="batch">
        <label>Units:</label>
        <input type="number" class="units" required>
        <label>Cost per Unit:</label>
        <input type="number" class="cost" required><br><br>
      </div>
    </div>

    <button type="button" class='btn btn-outline-primary' onclick="addBatch()">Add Another Batch</button><br><br>
  </form>

  <h2>Results</h2>
  <div id="results">
    <p>FIFO Cost: <span id="fifoResult">0.00</span></p>
    <p>LIFO Cost: <span id="lifoResult">0.00</span></p>
    <p>Average Cost: <span id="averageResult">0.00</span></p>
  </div>

